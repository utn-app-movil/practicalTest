<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:padding="20dp"
    tools:context=".UserActivity">

    <!-- TÍTULO -->
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese su información"
        android:textColor="#1E293B"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TABLE LAYOUT -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/textView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ID CON LUPA -->
        <TableRow>

            <TextView
                android:layout_width="128dp"
                android:layout_marginEnd="16dp"
                android:text="@string/TestID"
                android:textColor="#1E293B"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="8dp">

                <EditText
                    android:id="@+id/etId"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="DNI"
                    android:inputType="number"
                    android:maxLength="8"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btnSearchId"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@android:drawable/ic_menu_search"
                    app:tint="#2563EB" />
            </LinearLayout>
        </TableRow>

        <!-- NOMBRES -->
        <TableRow android:layout_marginTop="12dp">

            <TextView
                android:layout_marginEnd="16dp"
                android:text="@string/TextName"
                android:textColor="#1E293B"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:inputType="textPersonName|textCapWords"
                android:padding="12dp"
                android:textSize="16sp" />
        </TableRow>

        <!-- APELLIDO PATERNO -->
        <TableRow android:layout_marginTop="12dp">

            <TextView
                android:layout_marginEnd="16dp"
                android:text="@string/Textflastname"
                android:textColor="#1E293B"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etFLastName"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:inputType="textPersonName|textCapWords"
                android:padding="12dp"
                android:textSize="16sp" />
        </TableRow>

        <!-- APELLIDO MATERNO -->
        <TableRow android:layout_marginTop="12dp">

            <TextView
                android:layout_marginEnd="16dp"
                android:text="@string/Textslastname"
                android:textColor="#1E293B"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etSLastName"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:inputType="textPersonName|textCapWords"
                android:padding="12dp"
                android:textSize="16sp" />
        </TableRow>

        <!-- TELÉFONO -->
        <TableRow android:layout_marginTop="12dp">

            <TextView
                android:layout_marginEnd="16dp"
                android:text="@string/Textphone"
                android:textColor="#1E293B"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:inputType="phone"
                android:maxLength="9"
                android:padding="12dp"
                android:textSize="16sp" />
        </TableRow>

        <!-- EMAIL -->
        <TableRow android:layout_marginTop="12dp">
            <TextView
                android:text="Email"
                android:textColor="#1E293B"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="16dp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textSize="16sp" />
        </TableRow>

        <!-- FECHA DE NACIMIENTO (con calendario) -->
        <TableRow android:layout_marginTop="12dp">
            <TextView
                android:text="F. Nacimiento"
                android:textColor="#1E293B"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/tvBirthday"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="dd/mm/aaaa"
                    android:textColorHint="#94A3B8"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btnCalendar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@android:drawable/ic_menu_my_calendar"
                    app:tint="#2563EB" />
            </LinearLayout>
        </TableRow>

        <!-- DEPARTAMENTO -->
        <TableRow android:layout_marginTop="12dp">

            <TextView
                android:layout_marginEnd="16dp"
                android:text="@string/Textstate"
                android:textColor="#1E293B"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etState"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp" />
        </TableRow>

        <!-- DISTRITO -->
        <TableRow android:layout_marginTop="12dp">

            <TextView
                android:layout_marginEnd="16dp"
                android:text="@string/Textdistrict"
                android:textColor="#1E293B"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etDistrict"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp" />
        </TableRow>

        <!-- DIRECCIÓN -->
        <TableRow android:layout_marginTop="12dp">

            <TextView
                android:layout_marginEnd="16dp"
                android:text="@string/Textaddress"
                android:textColor="#1E293B"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:inputType="textPostalAddress"
                android:padding="12dp"
                android:textSize="16sp" />
        </TableRow>

        <!-- BOTÓN GUARDAR -->


    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>