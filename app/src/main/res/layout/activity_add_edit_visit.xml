<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Visita"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:gravity="center"
            android:padding="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Residente"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/etResidentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Carlos RodrÃ­guez"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Visitante"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etVisitorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: MarÃ­a GonzÃ¡lez"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de Visita (YYYY-MM-DD)"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etVisitDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: 2025-11-10"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:inputType="date"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora de Visita (HH:MM)"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etVisitTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: 14:00"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:inputType="time"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Motivo de la Visita"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etPurpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Visita familiar"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado de la Visita"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="16dp"/>

        <Spinner
            android:id="@+id/spinnerStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnSaveVisit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ’¾ Guardar"
                android:textSize="16sp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnCancelVisit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âŒ Cancelar"
                android:textSize="16sp"
                android:backgroundTint="#757575"
                android:textColor="#FFFFFF"
                android:padding="12dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>