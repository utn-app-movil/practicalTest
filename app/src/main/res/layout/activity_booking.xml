<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- title section -->
    <TextView
        android:id="@+id/tvBookingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/booking_title"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:id="@+id/scrollViewBooking"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvBookingTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnSave_Booking">

        <TableLayout
            android:id="@+id/tableLayoutBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <!-- Row: booking id + search -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">
                <TextView
                    android:id="@+id/tvIdBookingLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/booking_id_label"
                    android:paddingEnd="8dp" />
                <EditText
                    android:id="@+id/txtID_Booking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="text" />

                <ImageButton
                    android:id="@+id/btnSearchId_Booking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_search" />
            </TableRow>

            <!-- Row: space name (booking) -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/tvSpaceNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/space_name_label"
                    android:paddingEnd="8dp" />

                <EditText
                    android:id="@+id/txtSpaceName_Booking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textCapWords" />
            </TableRow>

            <!-- Row: space type booking -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/tvSpaceTypeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/space_type_label"
                    android:paddingEnd="8dp" />

                <EditText
                    android:id="@+id/txtSpaceType_Booking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/space_type_hint"
                    android:inputType="textCapWords" />
            </TableRow>

            <!-- Row: booking start dateTime -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/tvBookingStartLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_datetime_label"
                    android:paddingEnd="8dp" />

                <TextView
                    android:id="@+id/tvBookingDateTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:background="@android:drawable/edit_text"
                    android:text="@string/select_start_datetime"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/btnSelectStartDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_my_calendar" />
            </TableRow>

            <!-- Row: booking end datetime -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/tvBookingEndLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/end_datetime_label"
                    android:paddingEnd="8dp" />

                <TextView
                    android:id="@+id/tvBookingEndDateTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:background="@android:drawable/edit_text"
                    android:text="@string/select_end_datetime"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/btnSelectEndDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_my_calendar" />
            </TableRow>

            <!-- Row: status -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/tvStatusLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_label"
                    android:paddingEnd="8dp" />

                <Spinner
                    android:id="@+id/spStatus_Booking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </TableRow>

            <!-- Row: person id + search (static) -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/tvPersonLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/person_label"
                    android:paddingEnd="8dp" />

                <EditText
                    android:id="@+id/txtPersonId_Booking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/person_id_hint"
                    android:inputType="text" />

                <ImageButton
                    android:id="@+id/btnSearchPerson_Booking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_search" />
            </TableRow>

            <!-- Row: person full name (read-only) -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/tvPersonNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/person_name_label"
                    android:paddingEnd="8dp" />

                <TextView
                    android:id="@+id/tvPersonFullName_Booking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:background="@android:drawable/edit_text"
                    android:textSize="14sp" />
            </TableRow>

        </TableLayout>
    </ScrollView>

    <!-- save button at the bottom -->
    <Button
        android:id="@+id/btnSave_Booking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/save_booking_button"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
