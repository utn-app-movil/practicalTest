<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvFormTitleSec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/SecServ"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etReporterSec"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/etReporterSec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/nameofReport"
        android:inputType="textPersonName"
        android:autofillHints="name"
        app:layout_constraintTop_toBottomOf="@id/tvFormTitleSec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etLocationSec" />

    <EditText
        android:id="@+id/etLocationSec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/located"
        android:inputType="text"
        android:autofillHints="postalAddress"
        app:layout_constraintTop_toBottomOf="@id/etReporterSec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etDescriptionSec" />

    <EditText
        android:id="@+id/etDescriptionSec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/descriptionIssue"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:minHeight="120dp"
        android:autofillHints="description"
        app:layout_constraintTop_toBottomOf="@id/etLocationSec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rowDateSeveritySec" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rowDateSeveritySec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/etDescriptionSec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSaveSec" >

        <ImageButton
            android:id="@+id/btnDateSec"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/btn_round"
            android:contentDescription="@string/date_label"
            android:padding="12dp"
            app:srcCompat="@android:drawable/ic_menu_my_calendar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Spinner
            android:id="@+id/spinnerSeveritySec"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/btnDateSec"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnDateSec"
            app:layout_constraintBottom_toBottomOf="@id/btnDateSec" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnSaveSec"
        style="@style/colorBlanco"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:text="@string/savebtn"
        android:background="@drawable/btn_round"
        app:layout_constraintTop_toBottomOf="@id/rowDateSeveritySec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
