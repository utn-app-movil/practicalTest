<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/schedule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/titleSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis Horarios Disponibles"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1A1A1A"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Contenedor de horarios -->
    <LinearLayout
        android:id="@+id/scheduleContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/titleSchedule"
        app:layout_constraintBottom_toTopOf="@id/btnBack_Schedule"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Horario 1: Lunes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunes"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:00 AM - 10:00 AM"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#1565C0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matemáticas Avanzadas"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prof. Ana Gómez • Aula B-204"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Horario 2: Martes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Martes"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#E8F5E9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:30 AM - 12:30 PM"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Programación en Kotlin"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prof. Luis Fernández • Aula C-101"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Horario 3: Miércoles -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miércoles"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:00 AM - 10:00 AM"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#1565C0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matemáticas Avanzadas"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prof. Ana Gómez • Aula B-204"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Horario 4: Jueves -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jueves"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#E8F5E9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:30 AM - 12:30 PM"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Programación en Kotlin"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prof. Luis Fernández • Aula C-101"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Horario 5: Viernes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viernes"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFF3E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2:00 PM - 5:00 PM"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#EF6C00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Base de Datos"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prof. Carla Méndez • Lab-3"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- BOTÓN DE VOLVER (EXACTAMENTE COMO LO TENÍAS) -->
    <Button
        android:id="@+id/btnBack_Schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnBack_Schedule"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.841" />

</androidx.constraintlayout.widget.ConstraintLayout>