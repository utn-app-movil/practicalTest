<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvMealsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meals_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="14dp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/etMealName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/meal_name_hint"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/etMealQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/meal_quantity_hint"
            android:inputType="number"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/etDeliveryDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/meal_delivery_date_hint"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/etMealNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/meal_notes_hint"
            android:layout_marginBottom="14dp" />

        <Button
            android:id="@+id/btnAddUpdateMeal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add" />

        <Button
            android:id="@+id/btnClearMeal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clear"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/meals_list_title"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp" />

        <ListView
            android:id="@+id/listMeals"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" />

        <Button
            android:id="@+id/btnBackMeals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</ScrollView>
