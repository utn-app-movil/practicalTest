<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/schedule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/titleClasses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis Clases Disponibles"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1A1A1A"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Lista de clases (simulada con LinearLayout vertical) -->
    <LinearLayout
        android:id="@+id/classesContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/titleClasses"
        app:layout_constraintBottom_toTopOf="@id/btnBack_Class"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Clase 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#F5F5F5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matemáticas Avanzadas"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prof. Ana Gómez"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lunes y Miércoles • 8:00 AM - 10:00 AM"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aula: B-204"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

                <Button
                    android:id="@+id/btnSelect_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btnSelect_class" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Clase 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#F5F5F5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Programación en Kotlin"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prof. Luis Fernández"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Martes y Jueves • 10:30 AM - 12:30 PM"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aula: C-101"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

                <Button
                    android:id="@+id/btnSelect_class2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btnSelect_class" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Clase 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#F5F5F5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Base de Datos"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prof. Carla Méndez"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Viernes • 2:00 PM - 5:00 PM"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aula: Lab-3"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

                <Button
                    android:id="@+id/btnSelect_class3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btnSelect_class" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- BOTÓN DE VOLVER (EXACTAMENTE COMO LO TENÍAS) -->
    <Button
        android:id="@+id/btnBack_Class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnBack_Schedule"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.973" />

</androidx.constraintlayout.widget.ConstraintLayout>