<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/professor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/titleProfessors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuestros Profesores"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1A1A1A"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Contenedor de profesores -->
    <LinearLayout
        android:id="@+id/professorsContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/titleProfessors"
        app:layout_constraintBottom_toTopOf="@id/btnBack_Professor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Profesor 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#E8EAF6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prof. Ana Gómez"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#283593" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Especialidad: Matemáticas Avanzadas"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo: ana.gomez@utn.edu"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oficina: Edificio B, Piso 2"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horario de atención: Lunes y Miércoles 10:00 AM - 12:00 PM"
                    android:textSize="13sp"
                    android:textColor="#777777"
                    android:layout_marginTop="6dp"
                    android:textStyle="italic" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Profesor 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#E8F5E9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prof. Luis Fernández"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#1B5E20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Especialidad: Programación en Kotlin"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo: luis.fernandez@utn.edu"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oficina: Edificio C, Piso 1"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horario de atención: Martes y Jueves 1:00 PM - 3:00 PM"
                    android:textSize="13sp"
                    android:textColor="#777777"
                    android:layout_marginTop="6dp"
                    android:textStyle="italic" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Profesor 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#FFF3E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prof. Carla Méndez"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#EF6C00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Especialidad: Base de Datos"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo: carla.mendez@utn.edu"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oficina: Laboratorio 3"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horario de atención: Viernes 10:00 AM - 12:00 PM"
                    android:textSize="13sp"
                    android:textColor="#777777"
                    android:layout_marginTop="6dp"
                    android:textStyle="italic" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- BOTÓN DE VOLVER (EXACTAMENTE COMO LO TENÍAS) -->
    <Button
        android:id="@+id/btnBack_Professor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnBack_Class"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>